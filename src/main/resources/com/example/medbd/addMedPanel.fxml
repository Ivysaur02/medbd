<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="266.0" prefWidth="355.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.medbd.controllers.AddDoctController">
    <Label text="Добавить нового врача" />
   <Label fx:id="AlertLabel" textFill="RED" />
    <HBox spacing="10">
        <Label contentDisplay="CENTER" prefHeight="18.0" prefWidth="95.0" style="-fx-alignment: center;" text="Имя" />
        <TextField fx:id="firstNameField" alignment="BOTTOM_LEFT" prefHeight="26.0" prefWidth="145.0" />
    </HBox>
    <HBox spacing="10">
        <Label prefHeight="18.0" prefWidth="94.0" style="-fx-alignment: center;" text="Фамилия" />
        <TextField fx:id="lastNameField" prefHeight="26.0" prefWidth="151.0" />
    </HBox>
    <HBox spacing="10">
        <Label prefHeight="18.0" prefWidth="93.0" style="-fx-alignment: center;" text="Отчество" />
        <TextField fx:id="middleNameField" />
    </HBox>
    <HBox spacing="10">
        <Label prefHeight="18.0" prefWidth="97.0" style="-fx-alignment: center;" text="Специальность" />
        <ComboBox fx:id="titleComboBox" />
    </HBox>
    <HBox spacing="10">
        <Label prefHeight="18.0" prefWidth="98.0" style="-fx-alignment: center;" text="Кабинет" />
        <TextField fx:id="roomField" />
    </HBox>
    <Button onAction="#addDoctor" prefHeight="17.0" prefWidth="94.0" text="Добавить" />
</VBox>
